<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="banking.transactions.domain.entity">
	<class name="RequestBankTransfer" table="transaction">
        <id name="id" column="transaction_id">
            <generator class="native"/>
        </id>
        <property name="date" column="transaction_date" />
        <property name="fromAccountNumber" column="fromAccountNumber" />
        <property name="toAccountNumber" column="toAccountNumber" />
        <property name="amount" column="movimiento_1" />
    </class> 
</hibernate-mapping>